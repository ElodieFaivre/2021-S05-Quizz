<%- include('./partials/header') %>


    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h2 class="h1 display-4">GESTION DES UTILISATEURS</h2>

    </div>

    

    <a class="btn btn-lg btn-primary btn-block" href="/signup">AJOUTER UN UTILISATEUR</a>




    <div class="pricing-header mt-4  mx-auto text-center">
        <h3 class="h2">UTILISATEURS EXISTANTS</h3>

    </div>
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <table class="table table-striped table-hover">
            <thead class="table-primary">
                <tr class="th_primary">
                    <td> Nom </td>
                    <td> Prénom </td>
                    <td> Email </td>
                    <td> Role </td>
                    <td> Changer le role </td>
                </tr>
            </thead>
            <%for(const user of userList){%>
                <tr>
                    <td>
                        <%=user.firstname%>
                    </td>
                    <td>
                        <%=user.lastname%>
                    </td>
                    <td>
                        <%=user.email%>
                    </td>
                    <td>
                        <%=user.role%>
                    </td>
                    <td>
                        <% if(user.role=="admin" ){%>
                            <a href="/admin/users/<%= user.id %>/user">Définir le rôle à user</a>
                            <%}else if (user.role=="user" ){%>
                                <a href="/admin/users/<%= user.id %>/admin">Définir le rôle à admin</a>
                                <%}else {%>
                                    <a href="/admin/users/<%= user.id %>/user">Définir le rôle à user</a>
                                    <a href="/admin/users/<%= user.id %>/admin">Définir le rôle à admin</a>
                                    <%}%>
                    </td>

                </tr>
                <%}%>

        </table>






    </div>


    <%- include('./partials/footer') %>
<%- include('./partials/header') %>



    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h2 class="h1 display-4">O'Quiz</h2>

    </div>
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <form method="post" action="">
            <div class="form-label-group">
                <input type="text" class="form-control" id="tagName" name="tagName" placeholder="Nom du sujet">
                <label for="tagName">Nom du sujet</label>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">AJOUTER UN TAG</button>
        </form>

    </div>

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <p class="lead">Voici une liste des différents sujets présent sur O'quiz</p>
    </div>
    <div class="row">
      
            <% for (let tag of tagList) { %>
                <div class="col-3 p-4 text-center">

                    <a class=" btn-block btn-lg tag tag--<%= tag.name.toLowerCase() %>" href="/admin/updateTag/<%=tag.id%>">
                        <%= tag.name%>
                    </a>

                </div>
                <% } %>
       

    </div>

    </div>


    <%- include('./partials/footer') %>
<%- include('partials/header') %>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h2 class="h1 display-4">GESTION DES NIVEAUX</h2>

</div>

<div class="pricing-header mx-auto text-center">
    <h3 class="h2">AJOUTER UN NIVEAU</h3>

</div>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <form method="post" action="">
        <div class="form-label-group">
            <input type="text" class="form-control" id="levelName" name="levelName" placeholder="Nom du niveau">
            <label for="levelName">Nom du niveau</label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">AJOUTER UN NIVEAU</button>
    </form>

</div>

<div class="pricing-header mt-4  mx-auto text-center">
    <h3 class="h2">NIVEAUX EXISTANTS</h3>

</div>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <table class="table table-striped table-hover">
    <thead class="table-primary text-center ">
        <tr class="th_primary">
            <td> Niveau </td>
            
            <td ></td>
        </tr>
    </thead>
    <%for(const level of levelList){%>
        <tr>
            <td class= "text-center">
                <%=level.name%>
            </td>
           
            
            <td><a href="/admin/levels/delete/<%= level.id %>"
                    class="btn btn-sm btn-primary text-white">Supprimer le niveau</a></td>
        </tr>
        <%}%>

</table>
</div>

<%- include('partials/footer') %>
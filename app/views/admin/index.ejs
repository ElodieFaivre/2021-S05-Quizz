<%- include('./partials/header') %>


    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h2 class="h1 display-4">Bienvenue sur l'espace administrateur de O'Quiz</h2>

    </div>

    <a href="admin/addQuiz" class="btn btn-lg btn-block btn-primary text-white">AJOUTER UN QUIZ</a>
    <hr>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <td> Titre du Quiz </td>
                <td> Description </td>
                <td> Auteur </td>
                <td> Tags </td>
              
                <td> Voir la page du quiz </td>
                <td> Supprimer </td>
            </tr>
        </thead>
        <%for(const quiz of quizList){%>
            <tr>
                <td>
                    <%=quiz.title%>
                </td>
                <td>
                    <%=quiz.description%>
                </td>
                <td>
                    <%=quiz.author.fullname%>
                </td>
                <td>
                    <% for(const tag of quiz.tags){%>
                       <p class=" tag tag--<%= tag.name.toLowerCase()%>"" > <%=tag.name%> </p>
                    <%}%>
                    
                </td>
                
                <td><a href="/quiz/<%= quiz.id %>">Voir la page du quiz</a></td>
                <td><a href="/admin/quiz/delete/<%= quiz.id %>"
                        class="btn btn-lg btn-block btn-primary text-white">Supprimer le quiz</a></td>
            </tr>
            <%}%>

    </table>






    </div>


    <%- include('./partials/footer') %>